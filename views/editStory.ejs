<form action="/stories/edit" method="POST" class="new-story-card mx-auto mt-5 p-5">
    <input hidden type="text" name="_method" value="PUT">
    <input hidden type="text" name="story_id" value="<%= story._id%>">
    <div class="form-group">
        <label for="">Title</label>
        <input class="form-control" type="text" name="title" value="<%= story.title %>">
        <%= story.title %> 
    </div>
    <div class="form-group">
        <label for=""></label>
        <select name="status">
            <option value="public">Public</option>
            <option value="private">Private</option>
        </select>
    </div>
    <div class="form-group">
        <label for="">Make changes to this tale :</label>
        <textarea  class="form-control" name="body" id="" rows="10"><%= story.body %></textarea>
    </div>
    <div class="form-group d-flex justify-content-between">
        <input type="submit" class="btn btn-outline-success" value="Edit Story">
        <a href="/dashboard" class="btn btn-outline-warning">Cancel</a>
    </div>
</form>