<div class="story-container container d-flex justify-content-center flex-wrap p-5 mx-auto">
    <% stories.forEach(story=>{ %>
        <div class="mx-3 story-card text-center d-flex flex-column justify-content-between p-3 my-4">
            <% if (currentUser.admin) { %>
                <a href="/stories/<%= story._id  %>" class="btn edit-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                </a>
            <% } %>
            <a href="/<%= story._id %>">
                <h5>
                    <%= story.title %> 
                </h5>
            </a>
            <div class="text-box">
                <p>
                    <%= story.body %> 
                </p>
            </div>
            <div >
                <hr class="mx-3">
                <span>Likes : <%= story.likes %> </span> |
                <span>Published On: <%= story.createdAt.toLocaleDateString() %></span>
            </div>
            <div>
                <a href="/<%= story._id %>" class="btn btn-primary mt-3">Read More</a>
            </div>
        </div>
    <% }) %>  
</div>
<% if (currentUser.admin) { %>
    <%- include('partials/_addStoryBtn.ejs') %> 
<% } %>